<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="combo_session_form_balance">
        <field name="name">combo.session</field>
        <field name="model">combo.session</field>
        <field name="inherit_id" ref="combo_packs_management.combo_session_form"/>
        <field name="arch" type="xml">
            <field name="date" position="after">
                <field name="total_paid"/>
                <field name="total_balance"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="combo_session_tree_balance">
        <field name="name">combo.session</field>
        <field name="model">combo.session</field>
        <field name="inherit_id" ref="combo_packs_management.combo_session_tree"/>
        <field name="arch" type="xml">
            <field name="date" position="after">
                <field name="total_paid"/>
                <field name="total_balance"/>
            </field>
        </field>
    </record>
</odoo>
