<odoo>
    <record id="ir_cron_appointment_reminder" model="ir.cron">
            <field name="name">Tomorrows Appointment Reminder</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall">2015-12-31 18:00:00</field>
            <field eval="False" name="doall" />
            <field name="model">pos.order</field>
            <field name="function">_tomorrow_appointment_reminder</field>
            <field name="args">()</field>
        </record>
